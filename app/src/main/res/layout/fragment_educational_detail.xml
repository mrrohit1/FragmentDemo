<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#4B8A08">
            <TextView
                style="@style/TextViewStyle"
                tools:text="Name : Rohit Maurya"
                android:id="@+id/text_view_name_educational"/>
            <TextView
                android:id="@+id/text_view_age_educational"
                style="@style/TextViewStyle"
                tools:text="Age : 22" />

            <TextView
                android:id="@+id/text_view_gender_educational"
                style="@style/TextViewStyle"
                tools:text="Gender:Male" />
            <TextView
                android:id="@+id/text_view_contact_number_educational"
                style="@style/TextViewStyle"
                tools:text="Contact Number : 9820334104" />

            <TextView
                android:id="@+id/text_view_company_name_educational"
                style="@style/TextViewStyle"
                tools:text="Company Name : ABC Limited" />
            <TextView
                android:id="@+id/text_view_salary_educational"
                style="@style/TextViewStyle"
                tools:text="Salary: 48894222" />
            <TextView
                android:id="@+id/text_view_experiance_educational"
                style="@style/TextViewStyle"
                tools:text="Experience : 2 Years" />

            <EditText
                android:id="@+id/edit_text_passing_year"
                style="@style/EditTextStyle"
                android:hint="Passing Year of Graduation" />
            <EditText
                android:id="@+id/edit_text_percentage"
                style="@style/EditTextStyle"
                android:hint="Total Percentage" />
            <EditText
            android:id="@+id/edit_text_university_name"
            style="@style/EditTextStyle"
            android:hint="University name" />
            <Button
                android:id="@+id/button_educational_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="submit" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_educational_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"
                    android:text="Previous" />

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/FAB_show"
                    android:background="@mipmap/ic_launcher_save"
                    android:layout_margin="20dp"/>


            </RelativeLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>